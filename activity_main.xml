<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="3">

        <TextView
            android:id="@+id/Textview1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#777777"
            android:text=""
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:padding="20dp"
            android:textSize="30dp"/>
        <TextView
            android:id="@+id/Textview2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:textColor="@color/white"
            android:text=""
            android:padding="20dp"
            android:layout_gravity="end"
            android:textSize="35dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="#0C0C0C"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="0px"
            android:layout_weight="1"
            tools:ignore="Suspicious0dp">

            <Button
                android:id="@+id/bc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#0C0C0C"
                android:text="C"
                android:textColor="#00CCFF"
                android:textSize="25sp"/>

            <Button
                android:id="@+id/sqt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#0C0C0C"
                android:text="âˆš"
                android:textColor="#00CCFF"
                android:textSize="25sp" />

            <Button
                android:id="@+id/bpw"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#0C0C0C"
                android:text="^"
                android:textColor="#00CCFF"
                android:textSize="25sp" />

            <Button
                android:id="@+id/bd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#0C0C0C"
                android:text="/"
                android:textColor="#00CCFF"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="0px"
            android:layout_weight="1"
            tools:ignore="Suspicious0dp">

            <Button
                android:id="@+id/b7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#0C0C0C"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/b8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#0C0C0C"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/b9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#0C0C0C"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/bx"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#0C0C0C"
                android:text=" x "
                android:textColor="#00CCFF"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="0px"
            android:layout_weight="1"
            tools:ignore="Suspicious0dp">

            <Button
                android:id="@+id/b4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#0C0C0C"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/b5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#0C0C0C"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/b6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#0C0C0C"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/bs"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#0C0C0C"
                android:text="-"
                android:textColor="#00CCFF"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="0px"
            android:layout_weight="1"
            tools:ignore="Suspicious0dp">

            <Button
                android:id="@+id/b1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#0C0C0C"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/b2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#0C0C0C"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/b3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#0C0C0C"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/ba"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#0C0C0C"
                android:text="+"
                android:textColor="#00CCFF"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="0px"
            android:layout_weight="1"
            tools:ignore="Suspicious0dp">

            <Button
                android:id="@+id/b00"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#0C0C0C"
                android:text="00"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/b0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#0C0C0C"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/bpt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#0C0C0C"
                android:text="."
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/be"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#0C0C0C"
                android:text="="
                android:textColor="#00CCFF"
                android:textSize="25sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
